<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => Job %></h1>
</div>

<div class="fieldset">
  <dl>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
        <dd><div class="row"><%= @job.description %></div></dd>
        <hr />
      </span>
      </span>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
        <dd><div class="row"><%= @job.title %></div></dd>
        <hr />
      </span>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:organization) %></dt>
        <dd><div class="row"><%= @job.organization %></div></dd>
        <hr />
      </span>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
        <dd><div class="row"><%= @job.location %></div></dd>
        <hr />
      </span>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:skills) %></dt>
        <dd><div class="row"><%= @job.skills %></div></dd>
        <hr />
      </span>
      <span class="voffset2">
        <dt class="label label-default"><%= model_class.human_attribute_name(:experience) %></dt>
        <dd><div class="row"><%= @job.experience %></div></dd>
        <hr />
      </span>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn btn-default'  %>
  <% if current_user.present? && @job.user_id == current_user.id %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_job_path(@job), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                job_path(@job),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% else %>
    <% if current_user.present? && current_user.applied?(@job) %>
      <%= link_to 'Applied', '#', :class => 'btn btn-primary' %>
    <% else %>
      <%= link_to 'Apply', user_jobs_create_path(:id =>@job.id), :class => 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
